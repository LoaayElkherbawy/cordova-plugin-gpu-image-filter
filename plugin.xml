<?xml version='1.0' encoding='utf-8'?>
<plugin id="cordova-plugin-gpu-image-filter" version="0.0.38" xmlns="http://apache.org/cordova/ns/plugins/1.0"
        xmlns:android="http://schemas.android.com/apk/res/android">
    <name>ImageFilter</name>
    <js-module name="ImageFilter" src="www/ImageFilter.js">
        <clobbers target="ImageFilter"/>
    </js-module>
    <platform name="ios">
        <config-file target="*-Info.plist" parent="NSCameraUsageDescription">
            <string>Use camera to capture image</string>
        </config-file>
        <config-file parent="/*" target="config.xml">
            <feature name="ImageFilter">
                <param name="ios-package" value="ImageFilter"/>
                <param name="onload" value="true"/>
            </feature>
        </config-file>
        <header-file src="src/ios/ImageFilter.h"/>
        <source-file src="src/ios/ImageFilter.m"/>
        <header-file src="lib/PECropRectView.h" />
        <source-file src="lib/PECropRectView.m" />
        <header-file src="lib/PECropView.h" />
        <source-file src="lib/PECropView.m" />
        <header-file src="lib/PECropViewController.h" />
        <source-file src="lib/PECropViewController.m" />
        <header-file src="lib/PEResizeControl.h" />
        <source-file src="lib/PEResizeControl.m" />
        <header-file src="lib/UIImage+PECrop.h" />
        <source-file src="lib/UIImage+PECrop.m" />
        <resource-file src="lib/PEPhotoCropEditor.bundle" />

        <framework src="QuartzCore.framework" />
        <framework src="AVFoundation.framework" />
        <framework src="lib/GPUImage.framework" custom="true"/>
        <framework src="CoreGraphics.framework"/>
        <framework src="CoreImage.framework"/>
    </platform>
    <platform name="android">
        <framework src="org.apache.commons:commons-lang3:3.4" />
        <framework src="jp.co.cyberagent.android.gpuimage:gpuimage-library:1.4.1" />
        <!-- <framework src="src/android/cropper.gradle" custom="true" type="gradleReference" /> -->
        <!-- <resource-file src="src/android/lib/cropper.aar" target="libs/cropper.aar" /> -->
        <config-file parent="/*" target="res/xml/config.xml">
            <feature name="ImageFilter">
                <param name="android-package" value="cordova.plugin.gpu.image.filter.ImageFilter"/>
            </feature>
        </config-file>
        <config-file target="AndroidManifest.xml" parent="/manifest/application">
          <activity android:name="co/soundcloud/android/crop.CropImageActivity" />
        </config-file>
        <config-file target="AndroidManifest.xml" parent="/manifest">
          <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE"/>
          <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>
        </config-file>
        <config-file parent="/*" target="AndroidManifest.xml"></config-file>
        <source-file src="src/android/ImageFilter.java" target-dir="src/cordova/plugin/gpu/image/filter"/>
        <source-file src="src/android/lib/Crop.java" target-dir="src/co/soundcloud/android/crop"/>
        <source-file src="src/android/lib/CropImageActivity.java" target-dir="src/co/soundcloud/android/crop"/>
        <source-file src="src/android/lib/CropImageView.java" target-dir="src/co/soundcloud/android/crop"/>
        <source-file src="src/android/lib/CropUtil.java" target-dir="src/co/soundcloud/android/crop"/>
        <source-file src="src/android/lib/HighlightView.java" target-dir="src/co/soundcloud/android/crop"/>
        <source-file src="src/android/lib/ImageViewTouchBase.java" target-dir="src/co/soundcloud/android/crop"/>
        <source-file src="src/android/lib/Log.java" target-dir="src/co/soundcloud/android/crop"/>
        <source-file src="src/android/lib/MonitoredActivity.java" target-dir="src/co/soundcloud/android/crop"/>
        <source-file src="src/android/lib/RotateBitmap.java" target-dir="src/co/soundcloud/android/crop"/>
    </platform>
</plugin>
